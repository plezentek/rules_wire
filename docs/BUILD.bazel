load("@io_bazel_stardoc//stardoc:stardoc.bzl", "stardoc")
load("@bazel_skylib//:bzl_library.bzl", "bzl_library")

bzl_library(
    name = "docs",
    srcs = ["docs.bzl"],
    visibility = ["//visibility:public"],
    deps = [
        "//wire:def",
    ],
)

stardoc(
    name = "wire_injector-docs",
    out = "new_rules.md",
    input = "docs.bzl",
    symbol_names = [
        "wire_injector",
    ],
    visibility = ["//:__subpackages__"],
    deps = [":docs"],
)

stardoc(
    name = "wire_provider-docs",
    out = "new_providers.md",
    input = "docs.bzl",
    symbol_names = [
        "WireRelease",
    ],
    visibility = ["//:__subpackages__"],
    deps = [":docs"],
)

filegroup(
    name = "static-docs",
    srcs = [
        "providers.md",
        "rules.md",
    ],
    visibility = ["//:__subpackages__"],
)
